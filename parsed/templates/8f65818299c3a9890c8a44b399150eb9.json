{"components/custom/home/featured-offer":"<div class=\"custom-section featured-offer\" data-section-load=\"home-product-banner\">\r\n    <div class=\"container\">\r\n        <div class=\"custom-heading custom-animation\" data-step-animate=\"1\" data-section-load=\"animation\">\r\n            <h2 class=\"title text-center\">\r\n                {{theme_settings.home_featured_products_title}}\r\n            </h2>\r\n        </div>\r\n        <div class=\"custom-content custom-animation\" data-step-animate=\"2\" data-section-load=\"animation\">\r\n            <div class=\"list-product-wrapper\" data-slick='{\r\n                \"arrows\": true,\r\n                \"mobileFirst\": true,\r\n                \"slidesToShow\": 1,\r\n                \"slidesToScroll\": 1,\r\n                \"autoplay\": false,\r\n                \"dots\": false,\r\n                \"responsive\": [\r\n                    {\r\n                        \"breakpoint\": 800,\r\n                        \"settings\": {\r\n                            \"slidesToShow\": 3,\r\n                            \"slidesToScroll\": 1\r\n                        }\r\n                    },\r\n                    {\r\n                        \"breakpoint\": 550,\r\n                        \"settings\": {\r\n                            \"slidesToShow\": 2,\r\n                            \"slidesToScroll\": 1\r\n                        }\r\n                    }\r\n                ]\r\n            }'>\r\n                {{#each (split theme_settings.custom_featured_product_ids ',')}}\r\n                <div class=\"productBanner__item list-product__item\"\r\n                    data-special-product-id=\"{{this}}\">\r\n                    <div class=\"custom-special-product\">\r\n                        <div class=\"loadingOverlay\"></div>\r\n                    </div>\r\n                </div>\r\n                {{/each}}\r\n            </div>\r\n        </div>\r\n    </div>\r\n</div>\r\n"}
