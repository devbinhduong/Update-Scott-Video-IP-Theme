{"components/custom/home/image-banner":"{{#if theme_settings.home_image_banner}}\r\n<div class=\"custom-section section-image-banner\" data-section-load=\"section-image-banner\">\r\n    <div class=\"container\">\r\n        <div class=\"image-banner-list row\" style=\"--rowDesktop: 2; --gapDesktop: 30px;\">\r\n            <div class=\"image-banner-item col\">\r\n                <a href=\"{{theme_settings.img_banner_imageURL_1}}\" class=\"image-banner-item-link\">\r\n                    <div class=\"image-banner-item__content custom-animation\" data-step-animate=\"0\" data-section-load=\"animation\" style=\"--bg-color: {{theme_settings.img_banner_bg_color_1}};\">\r\n                        <div class=\"content-title custom-animation\" data-step-animate=\"0\" data-section-load=\"animation\">{{theme_settings.img_banner_title_1}}</div>\r\n                        <div class=\"content-body custom-animation\" data-step-animate=\"1\" data-section-load=\"animation\">\r\n                            <span class=\"label\">{{theme_settings.img_banner_label_1}}</span>\r\n                            <span class=\"value\">{{theme_settings.img_banner_value_1}}</span>\r\n                        </div>\r\n                    </div>\r\n                    <div class=\"image-banner-item__image hover-image custom-animation\" data-step-animate=\"0\" data-section-load=\"animation\">\r\n                        <img class=\"lazyload hover-image\" src=\"{{cdn 'img/loading.svg'}}\" data-src=\"https://cdn11.bigcommerce.com/s-{{settings.store_hash}}/images/stencil/original/image-manager/{{theme_settings.img_banner_image_1}}\" alt=\"Image Banner 1\">\r\n                    </div>\r\n                </a>\r\n            </div>\r\n            <div class=\"image-banner-item col\">\r\n                <a href=\"{{theme_settings.img_banner_imageURL_2}}\" class=\"image-banner-item-link\">\r\n                    <div class=\"image-banner-item__content custom-animation\" data-step-animate=\"0\" data-section-load=\"animation\" style=\"--bg-color: {{theme_settings.img_banner_bg_color_2}};\">\r\n                        <div class=\"content-title custom-animation\" data-step-animate=\"0\" data-section-load=\"animation\">{{theme_settings.img_banner_title_2}}</div>\r\n                        <div class=\"content-body custom-animation\" data-step-animate=\"1\" data-section-load=\"animation\">\r\n                            <span class=\"label\">{{theme_settings.img_banner_label_2}}</span>\r\n                            <span class=\"value\">{{theme_settings.img_banner_value_2}}</span>\r\n                        </div>\r\n                    </div>\r\n                    <div class=\"image-banner-item__image hover-image custom-animation\" data-step-animate=\"0\" data-section-load=\"animation\">\r\n                        <img class=\"lazyload hover-image\" src=\"{{cdn 'img/loading.svg'}}\" data-src=\"https://cdn11.bigcommerce.com/s-{{settings.store_hash}}/images/stencil/original/image-manager/{{theme_settings.img_banner_image_2}}\" alt=\"Image Banner 2\">\r\n                    </div>\r\n                </a>\r\n            </div>\r\n        </div>\r\n    </div>\r\n</div>\r\n{{/if}}\n"}
